{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
      "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "server",
    "types"
  ]
}
